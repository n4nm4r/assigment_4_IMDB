<Window xmlns:Views="clr-namespace:assigment_4_IMDB.Views"  x:Class="assigment_4_IMDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assigment_4_IMDB"
        xmlns:views="clr-namespace:assigment_4_IMDB.Views"
        xmlns:vm="clr_namespace:assigment_4_IMDB.ViewModels"
        mc:Ignorable="d"
        Title="Movie Database" Height="800" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="700"/>
        </Grid.RowDefinitions>

        <DockPanel HorizontalAlignment="Left">
            <Button Style="{StaticResource MenuButton}">
                <Image Source="{StaticResource Home}"/>
            </Button>
            <Button Style="{StaticResource MenuButton}">
                <Image Source="{StaticResource Search}"/>
            </Button>
        </DockPanel>

        <Views:FeaturedView Grid.Row="1"/>
    </Grid>
</Window>
